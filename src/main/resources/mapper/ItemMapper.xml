<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ItemMapper">

    <resultMap id="ItemResult" type="Item" autoMapping="true">
        <id column="id" property="id" javaType="Integer" jdbcType="INTEGER"/>
        <result property="cid1" column="cid1" javaType="Integer" jdbcType="INTEGER"/>
        <result property="cid2" column="cid2" javaType="Integer" jdbcType="INTEGER"/>
        <result property="created_at" column="created_at" javaType="Date" jdbcType="TIMESTAMP"/>
        <result property="updated_at" column="updated_at" javaType="Date" jdbcType="TIMESTAMP"/>
        <result property="deleted_at" column="deleted_at" javaType="Date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="getById" resultMap="ItemResult">
        SELECT * FROM items LEFT JOIN item_spec ON items.id=item_spec.gid
        where items.id=#{id}
    </select>

    <select id="getAllAvailable" resultMap="ItemResult">
        SELECT * FROM items LEFT JOIN item_spec ON items.id=item_spec.gid
        WHERE items.is_online = 1
    </select>

    <select id="getAll" resultMap="ItemResult">
        SELECT * FROM items LEFT JOIN item_spec ON items.id=item_spec.gid
    </select>

    <select id="top" resultMap="ItemResult">
        SELECT * FROM items LEFT JOIN item_spec ON items.id=item_spec.gid
    </select>

    <select id="getAllCanShow" resultMap="ItemResult">
        SELECT * FROM items LEFT JOIN item_spec ON items.id=item_spec.gid WHERE items.is_online = 1
    </select>

    <select id="getByCategory" resultMap="ItemResult">
        SELECT * FROM items LEFT JOIN item_spec ON items.id=item_spec.gid
        WHERE items.is_online = 1
        <if test="level1!=null">
            and cid1=#{level1}
        </if>
        <if test="level2!=null">
            and cid2=#{level2}
        </if>
    </select>

    <select id="search" resultMap="ItemResult">
        SELECT * FROM items LEFT JOIN item_spec ON items.id=item_spec.gid
        WHERE items.is_online = 1
        <if test="keywords!=null">
            and name like CONCAT('%',#{keywords},'%')
        </if>
    </select>

    <select id="count" parameterType="Boolean">
        SELECT count(1) FROM items LEFT JOIN item_spec ON items.id=item_spec.gid
        WHERE
        <if test="all">
            and is_online = 1
        </if>
    </select>

    <insert id="insert" parameterType="Item">

        INSERT INTO items (
        <trim prefix="" prefixOverrides="," suffixOverrides="," suffix="">
            <if test="no!=null">
                ,no
            </if>
            <if test="name!=null">
                ,name
            </if>
            <if test="cid1!=null">
                ,cid1
            </if>
            <if test="cid2!=null">
                ,cid2
            </if>

            <if test="src!=null">
                ,src
            </if>
            <if test="thumb!=null">
                ,thumb
            </if>
            <if test="place!=null">
                ,place
            </if>
            <if test="summary!=null">
                ,summary
            </if>
            <if test="notice!=null">
                ,notice
            </if>
            <if test="description!=null">
                ,description
            </if>
            ,created_at
            ,updated_at
        </trim>
        ) VALUES (
        <trim suffix="" suffixOverrides="," prefix="" prefixOverrides=",">
            <if test="no!=null">
                ,#{no}
            </if>
            <if test="name!=null">
                ,#{name}
            </if>
            <if test="cid1!=null">
                ,#{cid1}
            </if>
            <if test="cid2!=null">
                ,#{cid2}
            </if>

            <if test="src!=null">
                ,#{src}
            </if>
            <if test="thumb!=null">
                ,#{thumb}
            </if>
            <if test="place!=null">
                ,#{place}
            </if>
            <if test="summary!=null">
                ,#{summary}
            </if>
            <if test="notice!=null">
                ,#{notice}
            </if>
            <if test="description!=null">
                ,#{description}
            </if>
            ,now()
            ,now()
        </trim>
        )
    </insert>

    <update id="update">
        UPDATE items set
        <trim prefixOverrides="," prefix="" suffix="" suffixOverrides=",">
            <if test="no!=null">
                no=#{no},
            </if>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="cid1!=null">
                cid1=#{cid1},
            </if>
            <if test="cid2!=null">
                cid2=#{cid2},
            </if>
            <if test="src!=null">
                src=#{src},
            </if>
            <if test="thumb!=null">
                thumb=#{thumb},
            </if>
            <if test="place!=null">
                place=#{place},
            </if>
            <if test="summary!=null">
                summary=#{summary},
            </if>
            <if test="notice!=null">
                notice=#{notice},
            </if>
            <if test="description!=null">
                description=#{description},
            </if>
        </trim>
        ,updated_at=now()
        where id=#{id}
    </update>

    <delete id="delete">
        DELETE FROM items WHERE id=#{id}
    </delete>

    <update id="softDelete">
        UPDATE items set deleted_at=now() WHERE id=#{id}
    </update>


</mapper>